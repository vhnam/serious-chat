                </md-content>
            </md-content>
            <div class="chat-box">
                <form name="frmSendMsg" ng-submit="frmSendMsg.$valid && sendMessage()" class="frmSendMessage">
                    <textarea name="chat-box" ng-model="message" placeholder="Write a message..." ng-required="true" ng-keypress="submitForm($event)">
                    </textarea>
                    <div class="chat-toolbar">
                        <md-button class="md-icon-button" aria-label="Emotion">
                            <md-icon md-svg-icon="img/face.svg"></md-icon>
                        </md-button>
                        <md-button class="md-icon-button" aria-label="Send">
                            <md-icon md-svg-icon="img/send.svg"></md-icon>
                        </md-button>
                    </div>
                </form>
