<header>
	<a href="/">
		<md-button class="back-arrow" class="md-icon-button" aria-label="Back">
			<md-icon md-svg-icon="img/back.svg"></md-icon>
		</md-button>
	</a>
	<h1 class="brand-name">Sign Up</h1>
</header>
<section ng-controller="signupController">
	<article class="signup-form">
		<form action="/signup" method="post" name="SignUpForm" ng-submit="SignUpForm.$valid && submit($event)">
			<md-input-container >
				<md-icon md-svg-src="img/email.svg"></md-icon>
				<input id="user-email" ng-model="user.email" type="email" placeholder="Email" ng-required="true" autocomplete="off" spellcheck="false" pattern="^[-a-z0-9~!$%^&*_=+}{\'?]+(\.[-a-z0-9~!$%^&*_=+}{\'?]+)*@([a-z0-9_][-a-z0-9_]*(\.[-a-z0-9_]+)*\.(aero|arpa|biz|com|coop|edu|gov|info|int|mil|museum|name|net|org|pro|travel|mobi|[a-z][a-z])|([0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}))(:[0-9]{1,5})?$">
			</md-input-container>
			<md-input-container >
				<md-icon md-svg-src="img/key.svg"></md-icon>
				<input id="user-password" ng-model="user.password" type="password" placeholder="Password" ng-required="true" autocomplete="off" spellcheck="false" pattern="^[a-zA-Z0-9!@#$%^&*?_~]{6,}$">
			</md-input-container>
			<md-input-container >
				<md-icon md-svg-src="img/key.svg"></md-icon>
				<input id="user-confirm-password" ng-model="user.confirmPassword" type="password" placeholder="Confirm Password" ng-required="true" autocomplete="off" spellcheck="false" pattern="^[a-zA-Z0-9!@#$%^&*?_~]{6,}$">
			</md-input-container>
			<md-button class="md-raised btn-sign-up">Sign Up</md-button>
			<h6 class="error" ng-show="error != undefined">[[error]]</h6>
		</form>
	</article>
</section>